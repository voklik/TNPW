@using DataKnihovna.Model
@model Ucet
@{
    ViewBag.Title = "Účet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

    li {
        float: left;
    }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

            li a:hover {
                background-color: #111;
            }
</style>

<h2>Účet @Model.Login</h2>

Jmeno : @Model.Jmeno  @Model.Prijmeni <br />
Přezdívka : @Model.Prezdivka <br />

<ul>
    <li>
        @Ajax.ActionLink("Přehled objednávek", "prehledObjednavek", new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "editor" })
        
    </li>

    <li>
        @Ajax.ActionLink("Nastavení účtu", "nastaveniUctu", new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "editor" })

    </li>

</ul>
@if (TempData["zprava"] != null)
{<br/>
    <H2>
        @TempData["zprava"]
           
    </H2>
}
<div id="editor"></div>