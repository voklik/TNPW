@using DataKnihovna.Model
@model IList<Hra>
@{
    ViewBag.Title = "Hra";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Hry</h2>
<table class="table table-bordered table-hover table-condensed">
    <thead>
    <tr><th>nahled</th>
        <th>ID</th>
        <th>Název</th>
        <th>Platforma</th>
        <th>Cena</th>
        <th>Sleva %</th>
        <th>Aktuální cena</th>
        <th>Popis</th>
        <th>Vydavatel</th>
        <th>možnosti</th>

    </tr>
    </thead>
    <tbody>
    @foreach (Hra hra in Model)
    {
        <tr><td>
       @if(!string.IsNullOrEmpty(hra.Ikona))
        {
        
            <a href = "@Url.Action("DetailHry", "Hra", new {id = hra.Id})" >
            <img src="@Url.Content("~/uploads/hry/"+hra.Ikona)"/>
            </a>
        }
  
            @if(string.IsNullOrEmpty(hra.Ikona))
            {
                @Html.Label( "Hra nemá nastavenou ikonu")
            }
          
      

       </td>
            <td>
                <a href="@Url.Action("DetailHry","Hra", new {id=hra.Id})">@hra.Id</a>
            </td>
            <td>
                @hra.Nazev
            </td>
            <td>
                @hra.Platforma.Id
            </td>
            <td>
                @hra.Cena
            </td>
            <td>
                @{ double slev = hra.Sleva * 100;}
                @slev
            </td>
            <td>
                @{
                    double aktCena = 1.0 - hra.Sleva;
                    aktCena = aktCena * hra.Cena;
                } @aktCena
            </td>
            <td>
                @hra.Popis
            </td>
            <td>
                @hra.Vydavatel.Nazev
            </td>
            <td>
                <table border="0" cellspacing="0" cellpadding="0" >
                    <tr>
                            
                    <td>
                        @* //aby nikdo nemohl to udělat přes url *@
                        @using (Html.BeginForm("EditHra", "Hra", FormMethod.Post, new {enctype = "multipart/form-data"}))
                        {
                            @Html.Hidden("_id", @hra.Id)

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-primary">Editovat hru</button>
                                </div>
                            </div>
                        } </td>     
                          
                    </tr>
                    <tr>
                    <td>
                        @* //aby nikdo nemohl to udělat přes url *@
                        @using (Html.BeginForm("delete", "Hra", FormMethod.Post, new {enctype = "multipart/form-data"}))
                        {
                            @Html.Hidden("_id", @hra.Id)

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-primary">Smazat hru</button>
                                </div>
                            </div>
                        } </td>
                    </tr>
                </table>
            </td>
        </tr>
    }

    </tbody>



</table>


    <form>
        <a href="@Url.Action("NovaHra", "Hra")" class="btn btn-primary">
             Vytvořit novou hru
        </a> 
    </form>




@section Pozice{
        Právě se nacházíte na seznamu her
        <br />



    }
