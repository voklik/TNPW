@model DataKnihovna.Model.Obrazek
@{
    ViewBag.Title = "pridatObrazek";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>přidat Obrázek ke hře @Model.Game.Nazev</h2>


@using (Html.BeginForm("AddObrazek", "Hra", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.Hidden("hra", Model.Game.Id)

    @Html.HiddenFor(x => x.Aktivovano)


    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Popis obrázku</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Popis, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Popis)
        </div>

    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Vyberte obrazek</label>
        <div class="col-sm-10">
            <input type="file" name="obr" />
        </div>

    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Přidat obrázek</button>
        </div>
    </div>
}