@using System.Collections
@using DataKnihovna.DAO
@using DataKnihovna.Model
@model PolozkaObjednavka


@{
    ViewBag.Title = "Editace Položky";
    Layout = "../Shared/_Layout.cshtml";

}

<h2>Editece Položky </h2>

@using (Html.BeginForm("editPolozka", "Objednavka", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.ObjednavkaID)
    @Html.HiddenFor(x => x.Aktivovano)
    @Html.HiddenFor(x => x.Hra.Id)
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Stav</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.Stav.Id, new SelectList(@ViewBag.stavy, "Id", "Nazev", "id"))

        </div>
    </div>



    <div class="alert">
        <span class="closebtn">&times;</span>
        <strong>POZOR!! </strong>Pro následující políčko pod tímto varováním platí: Pokud použijete desetinou tečku místo desetinné čárky, má to za následek, že hodnota se nastaví na 0,0
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Cena</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.TehdejsiCena, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01" } })
            @Html.ValidationMessageFor(x => x.TehdejsiCena)
        </div>

    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Množství</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Mnozstvi, new { htmlAttributes = new { @type = "number", @min = "0", @step = "1" } })
            @Html.ValidationMessageFor(x => x.Mnozstvi)
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Provést editaci</button>
        </div>
    </div>

}
